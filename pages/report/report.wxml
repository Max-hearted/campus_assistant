<!--pages/report/report.wxml-->
<view class="section">
  <view class="section__title">当前选择：</view>
  <view class='search_bar'> 
    <picker
    mode="multiSelector"
    bindchange="bindMultiPickerChange"
    value="{{multiIndex}}"
    range="{{term}}">
    <view class="picker">
      <span class='tip'>学年：</span><span class='v'>{{term[0][multiIndex[0]]}}</span>
      <span class='tip'>学期：</span><span class='v'>{{term[1][multiIndex[1]]}}</span>
    </view>
    </picker>
    <button class='query' catchtap='query'>查询</button>
  </view>
</view>
<scroll-view scroll-y style='height:1000rpx;'>
  <view class="table">
    <view class="tr bg-w">
      <view class="th">学科</view>
      <!-- <view class="td">|</view> -->
      <view class="th">成绩</view>
    </view>
    <block wx:for="{{scores}}">
      <view class="tr bg-g">
        <view class="td">{{item.lesson_name}}</view>
        <!-- <view class="td">|</view> -->
        <view class="td score">{{item.score}}</view>
      </view>
    </block>
  </view>
</scroll-view>