/* pages/library/library.wxss */
.head{
  display: flex;
  justify-content: center;
  align-items: center;
  height: 80rpx;
  background: gainsboro;
}
.search-box{
  width: 80%;
  border-radius: 5px;
  border: 1px solid gray;
}
.head button{
  padding: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 0.8rem;
  height: 90%;
  width: 15%;
  margin: 10rpx;
}
.item{
  display: flex;
  flex-direction: row;
  background: rgb(221, 204, 204);
  margin: 20rpx 20rpx;
  border-radius: 10px;
  box-shadow: 0 0 10px gray;
}
.item image{
  height: 150rpx;
  width: 100rpx;
  margin: 40rpx;
}
.detail{
 display: flex;
 flex-direction: column; 
 margin: 40rpx 0;
}