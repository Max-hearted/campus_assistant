page{
  overflow-y: hidden;
  display: flex;
  flex-direction: column;
  justify-content: center;
  background: white;
}
.logo{
  display: flex;
  flex-direction: row;
  justify-content: center;
}
.bulb_logo{
  height: 500rpx;
  width: 500rpx;
}
.balance_text{
  display: flex;
  flex-direction: row;
  justify-content: center;
  margin: 20rpx 0 100rpx 0;
  font-size: 1.4rem;
}
.button_group{
  margin: auto;
  /* flex-direction: column;
  align-content:  center; */
  width: 70%;
}
.button_group button{
  margin-bottom: 40rpx;
  background: rgba(81, 206, 228, 0.918);
}
.foot{
  margin-top: 100rpx;
  display: flex;
  flex-direction: row;
  color: gray;
  justify-content: center;
  align-items: center;
}
.foot .picker{
  display: flex;
  width: 50%;
}
.picker view{
  border-bottom: 1px rgb(207, 29, 29) solid;
}